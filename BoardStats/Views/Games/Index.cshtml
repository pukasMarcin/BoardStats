
@model IEnumerable<Boardgames>

<head>

     <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap2.min.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- Font Awesome --> 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

<!-- Google Fonts -->
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">
	

     <link rel="stylesheet" href="~/css/Style.css">

</head>

<body>

      


<header>

                        <partial name="_NavbarPartial"/>

</header>


<div class="container" >
  <div class="row">

      @foreach (var item in Model)
      {
    <div class="col-sm-3">
      <div class="card">
       

            <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                     
                                   <input class="text-black float-right" type="checkbox" id="collCheck" name="coll">
                                </h5>
                            </p>
             </div>


              <div class="card-img">
          <img class="img-responsive" src=@item.ImageUrl>
       
        </div>

        <div class="card-content">
          <p>@item.Description</p>
        </div>

        <div class="card-action">
          <a href="#" target="new_blank">Link</a>
          <a href="#" target="new_blank">Link</a>

        </div>
      </div>
    </div>

    }


  </div>

</div>

</body>