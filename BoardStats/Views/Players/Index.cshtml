@model List<Player>

<!doctype html>
<html lang="en">
  <head>
  	<title>Table 02</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.css" />

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
	
	<link rel="stylesheet" href="~/css/style_table.css">


	
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
	<link rel="stylesheet" href="~/css/Style.css">
		<style>
		#border{
			  border-color: black !important; 
  border-style:solid !important;
  border-width:1px !important;
  text-align:center;
  margin:auto;

		}
      	</style>
		  <style>
		#icone{
		margin:auto;
		}
      	</style>
		  	  <style>
		#centre{
		text-align:center;
		}
      	</style>
	</head>
	<body>

      


<header>

                        <partial name="_NavbarPartial"/>

</header>

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Lista graczy</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table">
						  <thead class="thead-dark">
						    <tr>
								  @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                         <th id="centre">User Name</th>
                    }
						     
						      <th id="centre">Player Name</th>
						    
						      <th id="centre">Player Tag</th>
						      <th id="centre">Actions</th>
						    </tr>
						  </thead>
						  <tbody>
							  @foreach(var item in Model)
							  {
								  @if(item.IsActive==true || User.Identity.IsAuthenticated && User.IsInRole("Admin"))
								  {
								    <tr class="alert" id="border" role="alert">
									
						    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						     { 
								 <td id="border">@item.UserName</td>
							 
							 }
							    
						     
						      <td id="border">@item.PlayerName</td>
							  

							   
						      
						      <td id="border">@item.PlayerTag</td>
						
							 <td id="border">
								 	 <div class="row">
								 <div type="button" id="icone" class="text-black" data-toggle="ajax-modal" data-target="#Boardgames" data-url="@Url.Action("PopUpWindowUpdatePlayer", "Players",new {Id=@item.PlayerId})"><i class="bi bi-pencil-square"></i></div>
								 <div type="button" id="icone" class="text-black" data-toggle="ajax-modal" data-target="#Boardgames" data-url="@Url.Action("PopUpWindowDeletePlayer", "Players",new {Id=@item.PlayerId})"><i class="bi bi-trash-fill"></i></div>
							</div>
							 </td>
							  
						    
						  
						    </tr>
								  
							  }
							}
						  
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>


<div type="button" style="position: fixed; right: 25px; bottom: 25px;" class="text-white" data-toggle="ajax-modal" data-target="#Boardgames" data-url="@Url.Action("PopUpWindow2", "Players")">
	<button class="btn btn-info" type="button" >

		 <i class="bi bi-plus-circle"></i> Add player </button>
		 </div>


		 <div class="plHolder" id="PlaceHolder"></div>
	</section>

	<script src="~/js/jquery_table.min.js"></script>
  <script src="~/js/popper_table.js"></script>
  <script src="~/js/bootstrap_table.min.js"></script>
  <script src="~/js/main_table.js"></script>
   <script src="~/js/site.js"></script>

	</body>
</html>

