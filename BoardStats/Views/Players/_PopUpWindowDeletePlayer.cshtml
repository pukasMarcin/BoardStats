@using Microsoft.AspNetCore.Identity

@model Player



  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <form  method="post" class="form-register" id="form-register">
		        
			  @Html.HiddenFor(m => Model.PlayerTag, new {Value=@Model.PlayerTag})
											@Html.HiddenFor(m => Model.UserName, new {Value=@Model.UserName})
											@Html.HiddenFor(m => Model.UserId, new {Value=@Model.UserId})
												@Html.HiddenFor(m => Model.PlayerId, new {Value=@Model.PlayerId})
												@Html.HiddenFor(m => Model.PlayerName, new {Value=@Model.PlayerName})

							Czy na pewno chcesz usunąć gracza @Model.PlayerName ?
								
			
					


						

						<div class="form-row">
									
							
						<button class="btn btn-success " style="position: relative; left: 50px;" type="submit" asp-action="Delete" asp-controller="Players" >Delete</button>
					
						
						</div>

						
						
		        
		        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

  

