@using Microsoft.AspNetCore.Identity

@model Player



  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
	  <form  method="post" class="form-register" id="form-register">
      <div class="modal-content">
       
        <div class="modal-body">
         
		        
			  @Html.HiddenFor(m => Model.PlayerTag, new {Value=@Model.PlayerTag})
											@Html.HiddenFor(m => Model.UserName, new {Value=@Model.UserName})
											@Html.HiddenFor(m => Model.UserId, new {Value=@Model.UserId})
												@Html.HiddenFor(m => Model.PlayerId, new {Value=@Model.PlayerId})
												@Html.HiddenFor(m => Model.PlayerName, new {Value=@Model.PlayerName})

							Czy na pewno chcesz usunąć gracza @Model.PlayerName ?
								
			
					


						

						

						
						
		        
		        
        </div>
        <div class="modal-footer">
			<div class="form-row">
									
							
						<button class="btn btn-danger "  type="submit" asp-action="Delete" asp-controller="Players" >Delete</button>
					 <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						
						</div>
         
        </div>
      </div>
	  </form>
      
    </div>
  </div>

  

