@model Boardgames


<style>
    #kategoria{
        text-align:center;
        font-size:16px;
        margin:auto;
    }
</style>
 

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog" >
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
        
          <h4 class="modal-title"> @Model.Name      <button style="float:right" type="button" class="btn btn-default" data-dismiss="modal"><svg xmlns="http://www.w3.org/2000/svg" style="float:right" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
</svg></button> </h4>
        </div>
        <div class="modal-body">
        
            <div class="col-md-6">

                <div class="card-img">
                <img class="img-responsive" src=@Model.ImageUrl>
             </div>
                    
                    
                   <div class="text-justify">@Model.Description</div>


            </div>

             <div class="col-md-6">
                  <div class="col-md-12">
                             <i class="bi bi-tag"></i>  <span>@Model.Category</span>
                      </div>
                      
                      <div class="col-md-12">
                           <i class="bi bi-book"></i>  <a href="@Model.InstructionUrl" target="_blank">Instrukcja</a>
                      </div>

                      <row>
                      <div class="col-md-6m">
                          <i class="bi bi-star"></i> <span>@Model.BggRate</span>
                      </div>
                          <div class="col-md-6m">
                              <i class="bi bi-person"></i>  <span>@Model.MinPlayers-@Model.MaxPlayers </span>
                      </div>
                 </row>
             
                    <row>
                         
                      <div class="col-md-6m">
                           <i class="bi bi-hourglass"></i>  <span>@Model.PlayingTime</span>
                      </div>
                          <div class="col-md-6m">
                              <i class="bi bi-hand-thumbs-up"></i><i class="bi bi-person"></i>  <span>@Model.BestPlayers</span>
                      </div>
                 </row>

                     
              

                           <row>
                      <div class="col-md-6m">
                           <button type="button" value="Update" onclick="location.href='@Url.Action("Update", "Games", new { Id = @Model.IdGame })'" class="btn btn-default" >Update</button> 
                      </div>
                    
                          <div class="col-md-6m">
                              <button type="button" value="Delete" onclick="location.href='@Url.Action("DeleteGame", "Games", new { Id = @Model.IdGame })'" class="btn btn-default" >Delete</button>   
                              
                      </div>
                     
                 </row>




             </div>



        </div>
        <div class="modal-footer">
         
        </div>
      </div>
      
    </div>
  </div>


