<body>

	
      


<header>

                        <partial name="_NavbarPartial"/>

</header>

	<div class="container">
		
		<div class="wizard-v6-content">
			<div class="wizard-form">
		        <form class="form-register" id="form-register" asp-controller="Matches" asp-action="Update4" method="post">
		        	<div id="form-total">
		        		<!-- SECTION 1 -->
			            
			            <section>
			                <div class="inner">
			                	<div class="form-heading">
			                		<h3>Statystyki</h3>
			                		
			                	</div>
						



								
											<div class="container3">
												<span class="label">Statystyki dotyczące gry</span>
												</div>
											@if(@Model.StatsVM.Any())
											{
								@for(int k =0; k<@Model.StatsVM.Count;k++)
								{
									@if (@Model.StatsVM[k].Category == "Game")
									{
											<div class="form-holder24">
													
														<span class="label">@Model.StatsVM[k].Statistic</span>
														</div>
									
								<div class="form-holder">
								
							@Html.TextBoxFor(m=>m.StatsVM[(k)].Value)
											</div>
												

													@Html.HiddenFor(m=>m.StatsVM[k].Statistic,new {Value=@Model.StatsVM[k].Statistic})
											@Html.HiddenFor(m=>m.StatsVM[k].StatsId,new {Value=@Model.StatsVM[k].StatsId})
											@Html.HiddenFor(m=>m.StatsVM[k].Category,new {Value=@Model.StatsVM[k].Category})
											
											@Html.HiddenFor(m=>m.StatsVM[k].isChecked,new {Value=@Model.StatsVM[k].isChecked})
											
									}

								@Html.HiddenFor(m=>m.StatsVM[(k)].Value,new {Value="2"})

									}
								}
							
								<div class="container3">
												<span class="label2">Statystyki dotyczące graczy</span>
												</div>
								@for(int j=0;j<@Model.PlayerVM2.Count;j++)
								{
									@if (@Model.PlayerVM2[j].StatsVM.Count() > 0)
									{


										<span2 style="color:green">@Model.PlayerVM2[j].PlayerName</span2>


										@for (int i = 0; i < @Model.PlayerVM2[j].StatsVM.Count; i += 2)
										{


											<div class="form-holder24">

												<span class="label">@Model.PlayerVM2[j].StatsVM[i].Statistic</span>
											</div>
											<div class="form-holder33">
												@Html.TextBoxFor(m=>m.PlayerVM2[(j)].StatsVM[(i)].Value)
												@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i)].Statistic,new {Value=@Model.PlayerVM2[j].StatsVM[i].Statistic})
												@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i)].StatsId,new {Value=@Model.PlayerVM2[j].StatsVM[i].StatsId})
												@Html.HiddenFor(m=>m.PlayerVM2[(j)].PlayerName,new {Value=@Model.PlayerVM2[j].PlayerName})
												@Html.HiddenFor(m=>m.PlayerVM2[(j)].HoldId,new {Value=@Model.PlayerVM2[j].HoldId})
												@Html.HiddenFor(m=>m.PlayerVM2[(j)].isChecked,new {Value=@Model.PlayerVM2[j].isChecked})

												@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i)].Value,new {Value="2"})
											</div>



											@if (i + 1 < @Model.PlayerVM2[j].StatsVM.Count)
											{
												<div class="form-holder24">

													<span class="label">@Model.PlayerVM2[j].StatsVM[i+1].Statistic</span>
												</div>

												<div class="form-holder33">

													@Html.TextBoxFor(m=>m.PlayerVM2[(j)].StatsVM[(i+1)].Value)




													@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i+1)].Statistic,new {Value=@Model.PlayerVM2[j].StatsVM[i+1].Statistic})
													@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i+1)].StatsId,new {Value=@Model.PlayerVM2[j].StatsVM[i+1].StatsId})
													@Html.HiddenFor(m=>m.PlayerVM2[(j)].PlayerName,new {Value=@Model.PlayerVM2[j].PlayerName})
													@Html.HiddenFor(m=>m.PlayerVM2[(j)].HoldId,new {Value=@Model.PlayerVM2[j].HoldId})
													@Html.HiddenFor(m=>m.PlayerVM2[(j)].isChecked,new {Value=@Model.PlayerVM2[j].isChecked})
													@Html.HiddenFor(m=>m.PlayerVM2[(j)].StatsVM[(i+1)].Value,new {Value="2"})


												</div>

											}

										}

										



									}
									@if (@Model.PlayerVM2[j].StatsVM.Count == 0)
										{

											@Html.HiddenFor(m=>m.PlayerVM2[(j)].PlayerName,new {Value=@Model.PlayerVM2[j].PlayerName})
											@Html.HiddenFor(m=>m.PlayerVM2[(j)].HoldId,new {Value=@Model.PlayerVM2[j].HoldId})
											@Html.HiddenFor(m=>m.PlayerVM2[(j)].isChecked,new {Value=@Model.PlayerVM2[j].isChecked})

										}
								}
										

								
						@Html.HiddenFor(m=>m.MatchId,new {Value=@Model.MatchId})
						@Html.HiddenFor(m=>m.IdGame,new {Value=@Model.IdGame})
						@Html.HiddenFor(m=>m.isChallange,new {Value=@Model.isChallange})
						@Html.HiddenFor(m=>m.Duration,new {Value=@Model.Duration})
						@Html.HiddenFor(m=>m.WhoWIn,new {Value=@Model.WhoWIn})
						@Html.HiddenFor(m=>m.StartDate,new {Value=@Model.StartDate})
						@Html.HiddenFor(m=>m.ChallangeId,new {Value=@Model.ChallangeId})
						@Html.HiddenFor(m=>m.IdWinCon,new {Value=@Model.IdWinCon})
						@Html.HiddenFor(m=>m.UserId,new {Value=@Model.UserId})
						@Html.HiddenFor(m=>m.UserName,new {Value=@Model.UserName})
						
								@if(@Model.ExpansionsVM!=null)
{
						@for(int i =0; i< @Model.ExpansionsVM.Count;i++)
        {
           
              
				
               @Html.HiddenFor(m=>m.ExpansionsVM[i].ExpansionName,new {Value =@Model.ExpansionsVM[i].ExpansionName})
      @Html.HiddenFor(m=>m.ExpansionsVM[i].HoldId,new {Value =@Model.ExpansionsVM[i].HoldId})
	  @Html.HiddenFor(m=>m.ExpansionsVM[i].isChecked,new {Value =@Model.ExpansionsVM[i].isChecked})
				 


        }
												
								}
						
									
									
						
								
								<div class="form-row">
							
						<button class="btn btn-success " style="position: relative; left: 50px;" type="submit" >Dodaj</button>
					
						
						</div>



							</div>

			            </section>
					
			     







					

		        	</div>
		        </form>
			</div>
