		<div class="container1">
	<section class="ftco-section2">
	
			<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Statystyki Graczy</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table">
						  <thead class="thead-dark">
						    <tr>
								  
						     
						      <th id="centre">Statystyka</th>
							    @foreach(var item in @Model.Players)
								{
								  
						      <th id="centre">@if(@item.PlayerName==@Model.match.WhoWIn)
												{
													<i class="bi bi-trophy-fill"></i>@item.PlayerName
												}
												@if(@item.PlayerName!=@Model.match.WhoWIn) {@item.PlayerName}
												 </th>
											
								}


						      
						    </tr>
						  </thead>
						  <tbody>
							
								  
								  
									
						   
							     @foreach(var item in @Model.Stats)
							  {
								   <tr id="border" class="alert" role="alert">
								   <td id="border">@item.Statistic</td>
								   
							  
						     @foreach(var item2 in @Model.Match_Stats)
												{
													@foreach(var item3 in @Model.Players)
													{
													@if (item.IdStat == item2.IdStat && item2.PlayerId == item3.PlayerId)
														{
															<td id="border">@item2.Value </td>
														}
													}
													 
												}
												</tr>
								}

							   
						      
						  
					
							  
						    
						  
						    
								  
							  
							
						  
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</section>
	</div>

	<div class="container1">
	<section class="ftco-section2">
	
			<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Statystyki Gry</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table">
						  <thead class="thead-dark">
						    <tr>
		     
						     <th id="centre">Statystyka</th>
							
								   <th id="centre">Wartość</th>

						    </tr>
						  </thead>
						  <tbody>
   @foreach(var item in @Model.Game_Stats)
									{
										<tr class="alert" role="alert">
										
												<td id="border">@item.Statistic </td>
												@foreach(var item2 in @Model.Match_Stats)
												{
													@if(@item2.IdStat==item.IdStat)
													{
														<td id="border">@item2.Value </td>
													}
												}
											
										</tr>
									}
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</section>
	</div>

	<div class="container11">
	<section class="ftco-section2">
	
			<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Wykorzystane dodatki</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table">
						  <thead class="thead-dark">
						    <tr>
		     
						       <th id="centre">Lp.</th>
							
								   <th id="centre">Dodatek</th>

						    </tr>
						  </thead>
						  <tbody>
  
							      @for(int i =0;i<@Model.Expansions.Count();i++)
							  {
								  <tr class="alert" role="alert">
								  
								    <td id="border">@(i+1) </td>
									@foreach(var item in @Model.Expansions)
											{
												<td id="border">@item </td>
											}
									</tr>
							  }
						  </tbody>
						</table>
					</div>
				</div>
			</div>
